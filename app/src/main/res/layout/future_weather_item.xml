<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/future_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/future_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04/10"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>

                <ImageView
                    android:id="@+id/future_weather_icon_day"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/wid_00"
                    android:padding="2dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/future_weather_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多云"
                    android:textSize="11sp"
                    android:textColor="@color/black_m"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/future_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="17/21℃"
                    android:textSize="12sp"
                    android:textColor="@color/black_m"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/future_weather_icon_night"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/wid_00"
                    android:padding="2dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/future_weather_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多云"
                    android:textSize="11sp"
                    android:textColor="@color/black_m"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/future_direct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="西北风"
                    android:textSize="11sp"
                    android:textColor="@color/black_m"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
