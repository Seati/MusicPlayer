<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_isplaying"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_isplaying" />
        <LinearLayout
            android:id="@+id/ll_music_msg"
            android:layout_toRightOf="@+id/iv_isplaying"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_music_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:text="他不愛我"/>
                <TextView
                    android:id="@+id/tv_music_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="12sp"
                    android:visibility="gone"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_item_like"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/like1" />
</RelativeLayout>